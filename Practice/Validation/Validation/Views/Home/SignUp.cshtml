
@{
    bool CheckSkills(string skill)
    {
        if (Model != null && Model.Skills != null)
        {
            foreach (var h in Model.Skills)
            {
                if (h.Equals(skill)) return true;
            }
        }
        return false;
    }

    bool CheckGender(string gender)
    {
        if (Model != null && Model.Gender != null &&
            Model.Gender.Equals(gender))
        {
            return true;
        }
        return false;
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

    <!-- Include Bootstrap CSS from CDN -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Sign Up</h2>
        <form action="" method="post">
            <div class="form-group">
                <label for="fullName">Full Name:</label>
                <input type="text" class="form-control" value="@(Model==null ? "":Model.Name)" name="Name" placeholder="Enter your name">
                <span class="text-danger">@Html.ValidationMessage("Name")</span>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" value="@(Model==null ? "":Model.Email)" name="Email" placeholder="Enter your email address">
                <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" value="@(Model==null ? "":"")" name="Password" placeholder="Enter your password" data-toggle="tooltip"
                       data-placement="top" title="Password should be at least 8 characters long and must contain a mix of uppercase and lowercase letters, at least one numeric digit, and at least one special character (e.g., !, #, $, etc.)">
                <span class="text-danger">@Html.ValidationMessage("Password")</span>

            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm your password">
                <span class="text-danger">@Html.ValidationMessage("ConfirmPassword")</span>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" value="@(Model==null ? "":Model.Phone)" name="Phone" id="phone" placeholder="Enter your phone number" data-toggle="tooltip" data-placement="top" title="Please enter a valid phone number">
                <span class="text-danger">@Html.ValidationMessage("Phone")</span>
            </div>

            <div class="form-group">
                Gender: <input type="radio" checked="@CheckGender("Male")" name="Gender" value="Male" /> Male
                <input type="radio" checked="@CheckGender("Female")" name="Gender" value="Female" /> Female
                <br /> <span class="text-danger">@Html.ValidationMessage("Gender")</span> <br />
            </div>
            <div>
                Profession:
                <select name="Profession">
                    <option selected disabled>---Select---</option>
                    <option value="Devoloper">Devoloper</option>
                    <option value="Tester">Tester</option>
                    <option value="Business">Business</option>
                </select>
                <br />
                <span class="text-danger">@Html.ValidationMessage("Profession")</span>
            </div> <br />
            <div>
                Skills:
                <input type="checkbox" checked="@CheckSkills("WebDev")" name="Skills" value="WebDev" /> Web Development
                <input type="checkbox" checked="@CheckSkills("SQA")" name="Skills" value="SQA" /> Software Quality Assurance
                <input type="checkbox" checked="@CheckSkills("OOP")" name="Skills" value="OOP" /> Object-Oriented Programming
                <input type="checkbox" checked="@CheckSkills("Gaming")" name="Skills" value="Gaming" /> Gaming
                <br />
                <span class="text-danger">@Html.ValidationMessage("Skills")</span> <br />
            </div>

            <br /> <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>

    <!-- Include Popper.js and Bootstrap JS from CDNs -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</body>
</html>
